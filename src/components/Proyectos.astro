---
import IconoReact from "./iconos/React.jsx";
import IconoAstro from "./iconos/Astro.jsx";
import IconoTypescript from "./iconos/Typescript.jsx";
import type { ActionError } from "astro:actions";
import ProyectosItem from "./ProyectosItem.astro";

const ETIQUETAS = {
  REACT:{
    nombre : 'React',
    className: 'text-md flex flex-wrap rounded-md bg-green-700 my-2 mx-20 items-center text-white',
    icono: IconoReact
  },
  ASTRO:{
    nombre : 'Astro',
    className: 'text-md flex flex-wrap rounded-md bg-green-700 my-2 mx-20 items-center text-white',
    icono: IconoAstro
  },
  TYPESCRIPT:{
    nombre : 'TypeScript',
    className: 'text-md flex flex-wrap rounded-md bg-green-700 my-2 mx-20 items-center text-white',
    icono: IconoTypescript
  }
}
const PROYECTO = [
  {
    fecha: "Sept 2024",
    titulo: "Portfolio",
    descripcion:
      "\nRealice este portfolio en su mayoria con Astro y React.",
      link:"",
      imagen:'',
      etiquetas: [ETIQUETAS.ASTRO,ETIQUETAS.REACT]
    },
    
  {
    fecha: "Jul 2024 ",
    titulo: "Spurify - Clone de Spotify",
    descripcion:
      "\nRealice un clon de la famosa aplicacion de streaming de musica, con la busque replicar las funcionalidades basicas, como la reproduccion de canciones, el control de las mismas, el volumen, como tambien la gestion de las playlists. ",
    link:"https://spurify.vercel.app/",
    imagen: "/imagenes/imagenSpurify.jpg",
      etiquetas: [ETIQUETAS.ASTRO,ETIQUETAS.REACT,ETIQUETAS.TYPESCRIPT]
    },
  {
  fecha: "Jul 2023 - Nov 2023",
  titulo: "ForesTV",
  descripcion: "Desarrollé un sistema web para la visualización de partidos de fútbol, con un diseño atractivo y responsive. La aplicación incluye tarjetas informativas, carruseles de imágenes, e integraciones de video y sonido para una experiencia interactiva y optimizada en cualquier dispositivo.",
  link:"#" ,
  imagen:"/imagenes/imgForest.webp",
      etiquetas: [ETIQUETAS.REACT]
} 
];

---


{
    PROYECTO.map((proyecto) => (
        <ProyectosItem {...proyecto} />

    ))
  }
